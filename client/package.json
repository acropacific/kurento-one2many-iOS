{
  "name": "client",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "start": "npm run watch",
    "build-dir": "mkdir -p www",
    "html": "cp src/index.html www/",
    "watch:html": "npm run html && onchange 'src/index.html' -- npm run html",
    "watch:js": "watchify src/app.js -o www/app.js -p errorify -p [browserify-hmr -u //a.com:3124] -d",
    "build:js": "browserify src/app.js | uglifyjs -cm > www/app.js",
    "dev-server": "m59-reload-server -p 8081 -d www",
    "setup-reload": "onchange 'www/**/!(*.js)' -- curl -X POST localhost:8080/reload?path={{changed}} 2> /dev/null",
    "watch": "npm-run-all -s build-dir -p watch:html watch:js dev-server setup-reload",
    "build": "npm-run-all -s build-dir -p html build:js",
    "test": "node test"
  },
  "author": {
    "name": "Johnny Hauser",
    "email": "johnnyhauser@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@m59/reload-server": "^1.0.4",
    "babel": "^6.5.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-hmr": "^0.3.1",
    "errorify": "^0.3.1",
    "npm-run-all": "^1.6.0",
    "onchange": "^2.2.0",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.4.0"
  }
}
